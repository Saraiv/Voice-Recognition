<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VoiceRec.MainPage">

    <StackLayout>
        <Label x:Name="LabelText" FontSize="Large" VerticalOptions="FillAndExpand" />
        <Button x:Name="BtnRecord" Clicked="BtnRecordClick" VerticalOptions="FillAndExpand" Text="RECORD" />
        <Button x:Name="BtnStopRecord" Clicked="BtnStopRecordingClick" VerticalOptions="FillAndExpand" Text="STOP RECORDING" />
    </StackLayout>

</ContentPage>
